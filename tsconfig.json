{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    // Path alias config
    "baseUrl": "./src",
    "paths": {
      // This needs to be mirrored in babel.config.js
      "routes/*": ["routes/*"],
      "types/*": ["types/*"],
      "pages/*": ["pages/*"],
      "components/*": ["components/*"],
      "utils/*": ["utils/*"],
      "themes/*": ["themes/*"],
      "assets/*": ["assets/*"],
      "layouts/*": ["layouts/*"],
      "locales/*": ["locales/*"],
    }
  }
}
